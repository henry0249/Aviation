<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ZhuangJiDan_main">

    <include layout="@layout/navbar"
        android:id="@+id/ZhuangJiDanBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#ffffff">
        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="航班:"
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"/>

        <EditText
            android:text=""
            android:id="@+id/txt_ZhuangJiDan_HangBanHao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:padding="2dp"
            android:textSize="@dimen/house_size"
            android:textColor="#000"
            android:layout_gravity="center"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:inputType="text"
            android:background="@drawable/edit_bg" />

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="日期:"
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"/>


        <com.example.administrator.aviation.view.AutofitTextView
            android:id="@+id/txt_ZhuangJiDan_riqi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text=""
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:padding="2dp"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:background="@drawable/edit_bg"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff">

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="航程:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            app:sizeToFit="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"/>

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="NKG"
            android:padding="2dp"
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:background="@drawable/edit_bg"
            android:layout_marginLeft="00dp"
            android:layout_marginRight="00dp"/>

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="—"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <com.example.administrator.aviation.view.AutofitTextView
            android:id="@+id/txt_ZhuangJiDan_MuDiGang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text=""
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:background="@drawable/spinner_bg"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/btn_ZhuangJiDan_ChaXun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="查询"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ZhuangJiDan_QinKong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="清空"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ZhuangJiDan_JieZai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="截载"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ZhuangJiDan_BiDui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="比对"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 此部分是标题部分 -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="horizontal">

        <!-- 左侧标题的父容器 -->
        <TextView
            android:id="@+id/ZhuangJiDan_tv_table_title_left"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="总标题"/>

        <!-- 右侧标题的父容器可实现水平滚动 -->
        <com.example.administrator.aviation.ui.base.SyncHorizontalScrollView
            android:id="@+id/ZhuangJiDan_title_horsv"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:descendantFocusability="blocksDescendants"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ZhuangJiDan_right_title_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>
        </com.example.administrator.aviation.ui.base.SyncHorizontalScrollView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 此部分是内容部分 用ScrollView实现上下滚动效果 -->
        <com.example.administrator.aviation.ui.base.AbPullToRefreshView
            android:id="@+id/ZhuangJiDan_pulltorefreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/ZhuangJiDan_pull_refresh_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 左侧内容的父容器 -->
                    <com.example.administrator.aviation.ui.base.MyListView
                        android:id="@+id/ZhuangJiDan_left_container_listview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:scrollbars="none">
                    </com.example.administrator.aviation.ui.base.MyListView>

                    <!-- 右侧内容的父容器 实现水平滚动 -->
                    <com.example.administrator.aviation.ui.base.SyncHorizontalScrollView
                        android:id="@+id/ZhuangJiDan_content_horsv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fillViewport="true"
                        android:scrollbars="none">
                        <com.example.administrator.aviation.ui.base.MyListView
                            android:id="@+id/ZhuangJiDan_right_container_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:scrollbars="none">
                        </com.example.administrator.aviation.ui.base.MyListView>
                    </com.example.administrator.aviation.ui.base.SyncHorizontalScrollView>
                </LinearLayout>
            </ScrollView>
        </com.example.administrator.aviation.ui.base.AbPullToRefreshView>
    </FrameLayout>
</LinearLayout>
