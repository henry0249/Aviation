<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/gnjPickUpInfo_main">

    <include layout="@layout/navbar"
        android:id="@+id/gnjPickUpInfoBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/gnjPickUpInfo_Btn_lihuoStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="理货开始"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/gnjPickUpInfo_Btn_lihuoEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="理货结束"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/gnjPickUpInfo_Btn_TiQu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="货物提取"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 此部分是标题部分 -->
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="horizontal">

        <!-- 左侧标题的父容器 -->
        <TextView
            android:id="@+id/gnjPickUpInfo_tv_table_title_left"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="0.41"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="总标题"/>

        <!-- 右侧标题的父容器可实现水平滚动 -->
        <com.example.administrator.aviation.ui.base.SyncHorizontalScrollView
            android:id="@+id/gnjPickUpInfo_title_horsv"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:descendantFocusability="blocksDescendants"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/gnjPickUpInfo_right_title_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>
        </com.example.administrator.aviation.ui.base.SyncHorizontalScrollView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 此部分是内容部分 用ScrollView实现上下滚动效果 -->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/gnjPickUpInfo_pulltorefreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/gnjPickUpInfo_pull_refresh_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 左侧内容的父容器 -->
                    <com.example.administrator.aviation.ui.base.MyListView
                        android:id="@+id/gnjPickUpInfo_left_container_listview"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.41"
                        android:scrollbars="none">
                    </com.example.administrator.aviation.ui.base.MyListView>

                    <!-- 右侧内容的父容器 实现水平滚动 -->
                    <com.example.administrator.aviation.ui.base.SyncHorizontalScrollView
                        android:id="@+id/gnjPickUpInfo_content_horsv"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:fillViewport="true"
                        android:scrollbars="none">
                        <com.example.administrator.aviation.ui.base.MyListView
                            android:id="@+id/gnjPickUpInfo_right_container_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:scrollbars="none">
                        </com.example.administrator.aviation.ui.base.MyListView>
                    </com.example.administrator.aviation.ui.base.SyncHorizontalScrollView>
                </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>

</LinearLayout>
