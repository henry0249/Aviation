<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/navbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="平板编号:"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_PinBanHao_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_PinBanZhong_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="ULD①编号:"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianHao_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="0.9"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianZhong_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="ULD②编号:"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianHao_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="0.9"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size" />

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianZhong_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/uldloading_Btn_QueDin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uldloading_Btn_QinChu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="清空"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>