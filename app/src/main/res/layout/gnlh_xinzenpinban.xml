<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/navbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:text="平板编号:"
            android:textSize="@dimen/house_size"
            android:layout_gravity="center"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_PinBanHao_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_PinBanZhong_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.16"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="ULD编号:"
            android:textColor="#058000"
            android:textSize="@dimen/house_size"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianHao_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianZhong_A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.16"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="ULD编号:"
            android:textColor="#aa00ba"
            android:textSize="@dimen/house_size"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianHao_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

        <com.example.administrator.aviation.view.AutofitTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="自重:"
            android:textColor="#666666"
            android:textSize="@dimen/house_size"
            android:maxLines="1"
            app:sizeToFit="true"/>

        <EditText
            android:id="@+id/uldloading_edtTxt_uldBianZhong_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="@dimen/house_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/uldloading_Btn_QueDin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/uldloading_Btn_QinChu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="清空"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>