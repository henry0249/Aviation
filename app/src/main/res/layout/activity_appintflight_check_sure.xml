<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <include layout="@layout/navbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/flight_check_sure_nodata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/not_data"
            android:textSize="@dimen/awb_size"
            android:visibility="gone" />
        <ListView
            android:id="@+id/flight_check_sure_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
        <ProgressBar
            android:id="@+id/zhixian_pb"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff">
        <Button
            android:id="@+id/flight_check_sure_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订舱确认"
            android:layout_marginLeft="21dp"
            android:background="@drawable/button_selector"
            android:textColor="#ffffff"
            android:textSize="19sp"/>
        <Button
            android:id="@+id/flight_check_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消订舱"
            android:layout_marginRight="21dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selector"
            android:textColor="#ffffff"
            android:textSize="19sp"/>
    </LinearLayout>
</LinearLayout>