<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4">
    <!--设置锁屏密码-->
    <RelativeLayout
        android:id="@+id/setting_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:src="@drawable/suo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:text="@string/setting_pass"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="21dp"
            android:layout_gravity="center"
            android:src="@drawable/jiantou"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_below="@id/setting_pass_layout"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>

    <!--修改密码-->
    <RelativeLayout
        android:id="@+id/change_pass_layout"
        android:layout_below="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:src="@drawable/xiugaimima" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:text="@string/change_pass"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/jiantou"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_below="@id/change_pass_layout"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>

    <!--更新版本-->
    <RelativeLayout
        android:id="@+id/version_update_layout"
        android:layout_below="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:src="@drawable/xuanzhuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:text="@string/version_update"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:src="@drawable/jiantou"/>
    </RelativeLayout>

    <View
        android:id="@+id/first_view"
        android:layout_below="@id/version_update_layout"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>

    <!--退出登录-->
    <RelativeLayout
        android:id="@+id/exit_login_layout"
        android:layout_below="@+id/first_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#ffffff">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="21dp"
            android:layout_gravity="center"
            android:src="@drawable/kaiguan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:text="@string/exit_login"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="21dp"
            android:layout_marginTop="14dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/jiantou"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"/>

</RelativeLayout>