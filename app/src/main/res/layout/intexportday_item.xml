<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="承运人:"
                android:textSize="@dimen/declare_size" />

            <TextView
                android:id="@+id/edeclare_info_carrier_tv"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="CA"
                android:textSize="@dimen/declare_size"
                android:textColor="@color/gonggongcolor" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f4f4f4" />
        <LinearLayout
            android:id="@+id/carrier_dest_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/sfg_tv"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="目的港:"
                android:textSize="@dimen/declare_size" />

            <TextView
                android:id="@+id/edeclare_info_dest_tv"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="2017-03-05 10:20"
                android:textColor="@color/gonggongcolor"
                android:textSize="@dimen/declare_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/carrier_fno_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="航班号:"
                android:textSize="@dimen/declare_size" />

            <TextView
                android:id="@+id/edeclare_fno_tv"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="2017-03-05 10:20"
                android:textColor="@color/gonggongcolor"
                android:textSize="@dimen/declare_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/carrier_fdate_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="航班日期:"
                android:textSize="@dimen/declare_size"
                android:id="@+id/textView17" />

            <TextView
                android:id="@+id/edeclare_info_papertime_tv"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="2017-03-05 10:20"
                android:textColor="@color/gonggongcolor"
                android:textSize="@dimen/declare_size"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="件数"
                    android:textSize="@dimen/declare_size" />

                <TextView
                    android:id="@+id/edeclare_info_pc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/declare_size"
                    android:text="01"
                    android:textColor="@color/gonggongcolor"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="重量"
                    android:textSize="@dimen/declare_size" />

                <TextView
                    android:id="@+id/edeclare_info_weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/declare_size"
                    android:text="01"
                    android:textColor="@color/gonggongcolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="体积"
                    android:textSize="@dimen/declare_size"/>

                <TextView
                    android:id="@+id/edeclare_info_volume_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="02"
                    android:gravity="center"
                    android:textSize="@dimen/declare_size"
                    android:textColor="@color/gonggongcolor"  />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>