<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.administrator.aviation.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="61dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/company_iv"
                android:layout_width="103dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/logintubiao" />
            <TextView
                android:id="@+id/company_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/company_name"
                android:textColor="#1D2089"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bumen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_layout"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="73dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bumen"
                android:textColor="#000000"
                android:textSize="@dimen/login_size" />

            <EditText
                android:id="@+id/user_bumen_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:hint="@string/user_bumen"
                android:textColorHint="#a3a3a3"
                android:background="#ffffff"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/login_size"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bumen_layout"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="#a3a3a3" />

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bumen_layout"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"
                android:textColor="#000000"
                android:textSize="@dimen/login_size"
                android:layout_marginTop="19dp"/>

            <EditText
                android:id="@+id/userName_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="19dp"
                android:hint="@string/user_name"
                android:textColorHint="#a3a3a3"
                android:textCursorDrawable="@null"
                android:background="#ffffff"
                android:textSize="@dimen/login_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/name_layout"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="#a3a3a3" />

        <LinearLayout
            android:id="@+id/pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textColor="#000000"
                android:layout_marginTop="19dp"
                android:textSize="@dimen/login_size" />

            <EditText
                android:id="@+id/userPass_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="19dp"
                android:hint="@string/user_pass"
                android:inputType="textPassword"
                android:textColorHint="#a3a3a3"
                android:background="#ffffff"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/login_size" />
        </LinearLayout>

        <View
            android:id="@+id/pass_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pass_layout"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:background="#a3a3a3" />

        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_view"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="44dp">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="登    录"
                android:textColor="@color/colorWhite"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/save_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_layout"
            android:layout_marginLeft="83dp"
            android:layout_marginRight="83dp"
            android:layout_marginTop="29dp">

            <CheckBox
                android:id="@+id/savePass_checkbox"
                style="@style/MyCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_pass"
                android:textColor="#1d2089"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/autoLogin_checkbox"
                style="@style/MyCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/autoLogin"
                android:textColor="#1d2089"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
