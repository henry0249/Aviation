<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.aviation">

    <!--权限的添加-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/company_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.UserHomePageActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.VersionUpdateActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.SettingPasswordActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.ResetPasswordActivity"
            android:launchMode="singleTask" />

        <activity android:name=".ui.activity.domprepareawb.AppDomExpPrePareAWBActivity" />
        <activity
            android:name=".ui.activity.domprepareawb.AwbDetailActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.domprepareawb.AwbAddActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <activity android:name=".ui.activity.domexphouse.AppDomExpWareHouseActivity" />
        <activity
            android:name=".ui.activity.domexphouse.AppDomExpWareHouseItemActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.domexphouse.AppDomExpWareHouseDetailActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <activity
            android:name=".ui.activity.intawbofprepare.AppIntExpPrepareAWBActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.intawbofprepare.AppIntExpGroupActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.intawbofprepare.AppIntExpGroupAddActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.intawbofprepare.AppIntExpChildActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.intawbofprepare.AppIntExpChildAddActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <activity
            android:name=".ui.activity.intexpawbhousemanage.AppIntExpAWBHouseManageActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".ui.activity.intexpawbhousemanage.AppIntExpAwbHouseItemActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />

        <!--预配与运抵界面-->
        <activity
            android:name=".ui.activity.intexponekeydeclare.AppIntExpOneKeyDeclareActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".ui.activity.intexponekeydeclare.AppIntOneKeyDeclareItemActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"/>

    </application>

</manifest>